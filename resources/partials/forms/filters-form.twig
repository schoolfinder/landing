{% block filters_listing %}
    <ul class="clearfix">
        <li>
            <div class="switch-field">
                <input type="radio" id="all" name="listing_filter" value="all" checked data-filter="*" class="selected">
                <label for="all">All Schools</label>
                <input type="radio" id="creche_day-care" name="listing_filter" value="creche_day-care" data-filter=".creche_day-care">
                <label for="creche_day-care">Creche/Day Care</label>
                <input type="radio" id="primary_jhs" name="listing_filter" value="primary_jhs" data-filter=".primary_jhs">
                <label for="primary_jhs">Primary/JHS</label>
                <input type="radio" id="secondary" name="listing_filter" value="secondary" data-filter=".secondary">
                <label for="secondary">Secondary</label>
            </div>
        </li>
        <li><a class="btn_filt" data-toggle="collapse" href="#filters" aria-expanded="false" aria-controls="filters" data-text-swap="Less filters" data-text-original="More filters">More filters</a></li>
    </ul>
{% endblock %}

{% block filters_advance %}
